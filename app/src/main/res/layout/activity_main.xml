<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/lastReserve"
     android:hint="Last Reserve* (km)"
     android:textColor="@color/black"
     android:layout_margin="10dp"
     android:inputType="number"
     android:textAlignment="center"
     android:gravity="center_horizontal"></EditText>

    <EditText
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/currentReserve"
        android:hint="Current Reserve* (km)"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"></EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:hint="Total Price*"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>

        <EditText
            android:id="@+id/fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:hint="Fuel* (ltr)"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>

    </LinearLayout>

    <EditText
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:inputType="number"
        android:hint="Date"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"></EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mileage_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:inputType="number"
            android:layout_weight="1"
            android:background="#fff2f2f2"
            android:clickable="false"
            android:gravity="center"
            android:padding="12dp"
            android:text="0 km/ltr"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mileage_txt_inr_ltr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="#fff2f2f2"
            android:clickable="false"
            android:gravity="center"
            android:padding="12dp"
            android:text="0 inr/ltr"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mileage_txt_km"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="#fff2f2f2"
            android:clickable="false"
            android:gravity="center"
            android:padding="12dp"
            android:text="0 inr/km"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_margin="10dp"
        android:id="@+id/calculate"
        android:layout_gravity="center_horizontal"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:enabled="false"
        android:layout_margin="10dp"
        android:id="@+id/save"
        android:layout_gravity="center_horizontal"></Button>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Data"
        android:id="@+id/viewData"
        android:layout_gravity="center_horizontal"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Delete All Data"
        android:id="@+id/delete"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reset"
        android:id="@+id/reset"
        ></Button>



</LinearLayout>